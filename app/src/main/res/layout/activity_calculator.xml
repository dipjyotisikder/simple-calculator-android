<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainView"
    android:orientation="vertical"
    tools:context="com.deshiapp.mysimplecalculator.CalculatorActivity">
    <EditText
        android:id="@+id/txtCalc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/BlueJay"
        android:gravity="right"
        android:text="0"
        android:textSize="56sp"
        android:textStyle="normal"
        android:inputType="textEmailAddress|textWebEditText"
        android:typeface="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/BlueIvy"
            android:gravity="center"
            android:padding="0px"
            android:text="."
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnPM"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:background="@color/BlueIvy"
            android:text="+/-"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            />
        <Button

            android:id="@+id/btnC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0px"
            android:text="C"
            android:background="@color/BlueIvy"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
        android:background="@color/BlueJay"
            android:orientation="horizontal" >
            <Button
                android:layout_marginRight="2dp"
                android:id="@+id/btnPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:background="@color/BlueIvy"
                android:text="+"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button

                android:layout_marginRight="1dp"
                android:id="@+id/btnMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/BlueIvy"
                android:padding="0px"
                android:text="-"
                android:textSize="35sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button

                android:layout_marginLeft="1dp"
                android:id="@+id/btnMultiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:background="@color/BlueIvy"
                android:text="x"
                android:textSize="17sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:layout_marginLeft="2dp"
                android:id="@+id/btnDivide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/BlueIvy"
                android:gravity="center"
                android:padding="0px"
                android:text="รท"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
        <LinearLayout
            android:background="@color/BlueJay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="2"
                android:background="@color/BlueIvy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:id="@+id/btnThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="3"
                android:background="@color/BlueIvy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:layout_marginRight="1dp"
                android:id="@+id/btnFour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="4"
                android:background="@color/BlueIvy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />


            <Button
                android:layout_marginLeft="1dp"
                android:id="@+id/btnSeven"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:background="@color/BlueIvy"
                android:text="7"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />



            <Button

                android:id="@+id/btnEight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="8"
                android:background="@color/BlueIvy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="9"
                android:background="@color/BlueIvy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/BlueJay"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnZero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_span="2"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="0"
                android:textSize="23sp"
                android:background="@color/BlueIvy"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:layout_marginRight="1dp"
                android:id="@+id/btnOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="1"
                android:background="@color/BlueIvy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:layout_marginLeft="1dp"
                android:id="@+id/btnFive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:background="@color/BlueIvy"
                android:text="5"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />
            <Button
                android:id="@+id/btnSix"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="0px"
                android:text="6"
                android:background="@color/BlueIvy"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="serif" />




        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/BlueJay"
            >


            <Button
                android:layout_marginRight="1dp"
                android:id="@+id/backBtn"
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/BlueIvy"
                android:text="Sign-Out" />


            <Button
                android:layout_marginLeft="1dp"
                android:id="@+id/btnEquals"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="0px"
                android:layout_weight=".3"
                android:background="@color/BlueIvy"
                android:text="="
                android:textSize="40sp"
                android:textStyle="bold"
                android:typeface="serif" />


        </LinearLayout>


    </LinearLayout>




</LinearLayout>
